<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
 
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="$DIST_SHORTNAME" location="applications"/>

	<shortcut
        name="Manager"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="javaws"
        commandLine="http://$HOST_NAME:8080/console/launch.jnlp"
        description="Start $DIST_NAME manager"
        iconFile="$INSTALL_PATH\wrapper\resources\images\manager.ico"
        iconIndex="0">
    </shortcut>

 	<shortcut
        name="Service Install"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\install.cmd"
        commandLine=""
        description="Install $DIST_NAME as service"
        iconFile="$INSTALL_PATH\wrapper\resources\images\service-install.ico"
        iconIndex="0">
    </shortcut>
 
 	 <shortcut
        name="Service Start"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\start.cmd"
        commandLine=""
        description="Start $DIST_NAME service"
        iconFile="$INSTALL_PATH\wrapper\resources\images\service-start.ico"
        iconIndex="0">
    </shortcut>
 
 	<shortcut
        name="Service Stop"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\stop.cmd"
        commandLine=""
        description="Stop $DIST_NAME service"
        iconFile="$INSTALL_PATH\wrapper\resources\images\service-stop.ico"
        iconIndex="0">
    </shortcut>
 
 	<shortcut
        name="Service Uninstall"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\uninstall.cmd"
        commandLine=""
        description="Uninstall $DIST_NAME service"
        iconFile="$INSTALL_PATH\wrapper\resources\images\service-uninstall.ico"
        iconIndex="0">
    </shortcut>
 
 	<shortcut
        name="Log Service"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\wrapper\logs\wrapper.log"
        commandLine=""
        description="$DIST_NAME Service log"
        iconFile="$INSTALL_PATH\wrapper\resources\images\log-service.ico"
        iconIndex="0">
    </shortcut>
 
 	<shortcut
        name="Log Server"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\server\default\data\nfs\root\var\log\server.log"
        commandLine=""
        description="$DIST_NAME server log"
        iconFile="$INSTALL_PATH\wrapper\resources\images\log-server.ico"
        iconIndex="0">
    </shortcut>

	<shortcut
        name="Log Client"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\server\default\data\nfs\root\var\log\syslog.log"
        commandLine=""
        description="$DIST_NAME client log"
        iconFile="$INSTALL_PATH\wrapper\resources\images\log-client.ico"
        iconIndex="0">
    </shortcut>
 
    <shortcut
        name="Uninstall"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
        commandLine=""
        description="Uninstall $DIST_NAME"
        iconFile="$INSTALL_PATH\wrapper\resources\images\uninstall.ico"
        iconIndex="0">
    </shortcut>
 
</shortcuts>

