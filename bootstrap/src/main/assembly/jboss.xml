<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/xsd/assembly" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/xsd/assembly http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <id>jboss</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/jboss/modules</directory>
            <outputDirectory>/modules</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/jboss/bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/jboss/standalone</directory>
            <outputDirectory>/standalone</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>


        <!-- Groovy -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/codehaus/groovy/groovy-all/2.1.6</outputDirectory>
            <includes>
                <include>org.codehaus.groovy:groovy-all:jar:2.1.6</include>
            </includes>
        </dependencySet>        

        <!-- Apache Commons -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/commons/lang3/3.1</outputDirectory>
            <includes>
                <include>org.apache.commons:commons-lang3:jar:3.1</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/commons/io/2.4</outputDirectory>
            <includes>
                <include>commons-io:commons-io:jar:2.4</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/commons/collections/3.2.1</outputDirectory>
            <includes>
                <include>commons-collections:commons-collections:jar:3.2.1</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/commons/beanutils/1.8.3</outputDirectory>
            <includes>
                <include>commons-beanutils:commons-beanutils:jar:1.8.3</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/commons/email/1.3.1</outputDirectory>
            <includes>
                <include>org.apache.commons:commons-email:jar:1.3.1</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/commons/fileupload/1.2.2</outputDirectory>
            <includes>
                <include>commons-fileupload:commons-fileupload:jar:1.2.2</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/poi/3.9</outputDirectory>
            <includes>
                <include>org.apache.poi:poi:jar:3.9</include>
            </includes>
        </dependencySet>        
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/modules/org/apache/commons/digester/2.1</outputDirectory>
            <includes>
                <include>commons-digester:commons-digester:jar:2.1</include>
            </includes>
        </dependencySet>        

    </dependencySets>
</assembly>