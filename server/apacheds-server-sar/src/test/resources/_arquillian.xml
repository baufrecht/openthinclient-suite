<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian" 
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    
    <defaultProtocol type="Servlet 3.0" />
    <container qualifier="jboss" default="true">
        <configuration>
            <!-- property name="javaVmArguments">-noverify -Xdebug -Xnoagent -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8${junit.jboss.port.offset} -Dsun.rmi.dgc.client.gcInterval=3600000 -Dsun.rmi.dgc.server.gcInterval=3600000 -Dorg.jboss.resolver.warning=true -Djboss.modules.system.pkgs=org.jboss.byteman -Dfile.encoding=UTF-8 -Dsun.jnu.encoding=UTF-8 -Duser.language=en -Duser.country=US -Duser.timezone=UTC ${health.server.java.memory}</property -->
            <property name="javaVmArguments">-noverify -Djava.util.logging.manager=org.jboss.logmanager.LogManager</property>            
            <property name="jbossHome">${junit.dir}/jboss-wildfly</property>
            <property name="modulePath">${junit.dir}/jboss-wildfly/modules</property>
            <property name="managementAddress">127.0.0.1</property>
            <property name="managementPort">${junit.jboss.port.management}</property>
        </configuration>
    </container>
    
    
    
</arquillian> 